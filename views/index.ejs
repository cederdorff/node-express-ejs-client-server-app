<!DOCTYPE html>
<html>
  <head>
    <title>Chatbot med Express og EJS</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="chat-container">
      <h1>Min Chatbot</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
          <strong>Fejl:</strong> <%= error %>
        </div>
      <% } %>
      <form method="POST" action="/chat" class="chat-form">
        <input type="text" name="message" placeholder="Skriv din besked her" required />
        <button type="submit">Send</button>
      </form>
      <div class="chat-messages">
        <% if (messages && messages.length) { %>
          <% messages.forEach(msg => { %>
            <div class="message <%= msg.sender.toLowerCase() %>"><strong><%= msg.sender %>:</strong> <%= msg.text %></div>
          <% }) %>
        <% } %>
      </div>
      <% if (botReply) { %>
        <div><strong>Bot svar:</strong> <%= botReply %></div>
      <% } %>
    </div>
  </body>
</html>
